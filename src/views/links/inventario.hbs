            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre Producto</th>
                    <th>Tipo</th>
                    <th>Descripcion</th>
                    <th>Cantidad</th>
                    <th>Valor Compra</th>
                    <th>Gramos por Porcion</th>
                    <th></th>

                </tr>
            </thead>

            <tbody id="contenido">
                {{#if productos}}
                {{#each productos}}
                <tr>
                    <td>{{IDPRODUCTO}}</td>
                    <td>{{NOMBREPRODUCTO}}</td>
                    <td>{{TIPOPRODUCTO}}</td>
                    <td>{{DESCRIPCIONPRODUCTO}}</td>
