                    <td> <a href="/links/edit/{{IDPRODUCTO}}" class="btn-floating green"><i class="material-icons left">create</i></a></td>
                </tr>
                {{/each}}
                {{/if}}
                {{#if tipoProductos}}
                {{#each tipoProductos}}
                <tr>
                    <td>{{IDPRODUCTO}}</td>
                    <td>{{NOMBREPRODUCTO}}</td>
                    <td>{{TIPOPRODUCTO}}</td>
                    <td>{{DESCRIPCIONPRODUCTO}}</td>
                    <td>{{CANTIDADINVENTARIO}}</td>
                    <td>{{COSTO}}</td>
                    <td>{{CANTIDADPORCION}}</td>
                </tr>
